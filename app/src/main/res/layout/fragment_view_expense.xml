<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/expenseMaterFragmet"
    tools:context="com.palle.lekha.mywallet.Model.ViewExpenseFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:layout_weight="0.08">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:id="@+id/textview_idViewExpense"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="ID"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_marginRight="5dp"

            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_DateViewExpense"
            android:text="DATE"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"

            android:layout_height="wrap_content"
            android:id="@+id/textview_CategoryViewExpense"
            android:text="CATEGORY"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:id="@+id/textview_DescriptionViewExpense"
            android:text="DESCRIPTION"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_marginRight="5dp"

            android:layout_height="wrap_content"
            android:id="@+id/textview_AmountViewExpense"
            android:text="AMOUNT"/>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:id="@+id/listview_ExpenseView"
        >

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".05">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/textview_TotalExpense"
            android:text="EXPENSE TOTAL"
            android:gravity="center" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:id="@+id/editText_TotalExpense"
            />
    </LinearLayout>


</LinearLayout>
