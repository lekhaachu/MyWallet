<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_wallet"
    tools:context="com.palle.lekha.mywallet.MainActivity">

    <TextView
        android:id="@+id/textView_income"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="INCOME"
        android:textSize="20dp"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/textView_expense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_expense"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="60dp"
        android:text="EXPENSE"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView_income"
        android:layout_alignStart="@+id/textView_income" />
</RelativeLayout>
